generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id         Int      @id @default(autoincrement())
  title      String
  subtitle   String?
  authorId   Int
  author     Author   @relation(fields: [authorId], references: [id])
  sidebar    Sidebar?
  benefits   Benefit[]?
  suitableFor SuitableFor[]?
  details    CourseDetails[]?
  info       CourseInfo?
}

model Sidebar {
  id          Int      @id @default(autoincrement())
  courseId    Int      @unique
  course      Course   @relation(fields: [courseId], references: [id])
  information Information[]
}

model Information {
  id        Int      @id @default(autoincrement())
  name      String
  quantity  String?
  sidebarId Int
  sidebar   Sidebar @relation(fields: [sidebarId], references: [id])
}

model Author {
  id         Int    @id @default(autoincrement())
  name       String
  image      String
  profession String
  tags       String[]
  courses    Course[]
}

model Benefit {
  id          Int    @id @default(autoincrement())
  courseId    Int
  title       String
  description String
  course      Course @relation(fields: [courseId], references: [id])
}

model SuitableFor {
  id          Int    @id @default(autoincrement())
  courseId    Int
  description String
  course      Course @relation(fields: [courseId], references: [id])
}

model CourseDetails {
  id          Int    @id @default(autoincrement())
  courseId    Int
  description String
  course      Course @relation(fields: [courseId], references: [id])
}

model CourseInfo {
  id        Int    @id @default(autoincrement())
  courseId  Int    @unique
  price     Int
  course    Course @relation(fields: [courseId], references: [id])
}
